<Page x:Class="IntoApp.View.Login.PageLoginLoading"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IntoApp.View.Login"
      xmlns:Controls="clr-namespace:Skin.WPF.Controls;assembly=Skin.WPF"
      xmlns:Data="clr-namespace:IntoApp.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
      Title="PageLoginLoading">
    <Page.DataContext>
        <Data:PageLoginLoadingViewModel/>
    </Page.DataContext>

    <Grid>
        <StackPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                       Margin="5">
                <Controls:UseImage Image="{StaticResource Icon_Loading}"
                                   ImageBrush="#C2C3C9"
                                   Width="30" Height="30"
                                   ImageWidth="30" ImageHeight="30"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="" Foreground="#3B3E3E"/>
            </WrapPanel>
        </StackPanel>
       
    </Grid>
</Page>
